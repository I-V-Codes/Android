<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayoutHas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffb732"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ege493.sunynp.hawksnest2014.MainActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/textViewPName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="#19198c"
        android:textSize="28sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textViewPDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/main_desc"
        android:textColor="#19198c" />

    <ScrollView
        android:id="@+id/scrollViewH"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/imageButtonPQuad"
                android:layout_column="0"
                android:layout_gravity="top|center"
                android:layout_row="0"
                android:src="@drawable/parkerquad"
                android:onClick="onClick" />

            <ImageButton
                android:id="@+id/imageButtonHQuad"
                android:layout_gravity="center|center_horizontal"
                android:src="@drawable/hasquad"
                android:onClick="onClick" />

            <ImageButton
                android:id="@+id/imageButtonSQuad"
                android:layout_gravity="center|bottom"
                android:src="@drawable/southquad"
                android:onClick="onClick" />

        </GridLayout>

    </ScrollView>

</LinearLayout>
